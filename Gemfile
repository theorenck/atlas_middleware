source 'http://rubygems.org'

gem 'rails', '4.2'

gem 'rails-api', '~> 0.3.1'

gem 'pg', '~> 0.17.1'

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms:  [:mingw, :mswin]

# Use ruby-odbc for ODBC integration
gem 'ruby-odbc', '~> 0.99995', require: 'odbc_utf8'

# Use to provide support for Cross-Origin Resource Sharing (CORS) with Rack
gem 'rack-cors', '~> 0.2.9', require: 'rack/cors'

# Use ActiveType to make any Ruby object quack like ActiveRecord
gem 'active_type', '~> 0.3.1'

# Use ActiveModel::Serializers to serialize models
gem 'active_model_serializers', '~> 0.9.2'

# A fast and very simple Ruby web server
gem 'thin', '~> 1.6.3'

#A database backend that translates interactions into no-ops using NullDB
gem 'activerecord-nulldb-adapter', '~> 0.3.1'